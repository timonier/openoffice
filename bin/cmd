#!/bin/bash
set -e -u

fail() {
    echo 1>&2 "$1"
    exit 255
}

if [ "$(uname)" != "Linux" ]; then
    fail "Current OS is not supported."
fi

exec docker run $(compgen -A variable | grep -v "^(PATH)$" | awk "{print \"--env\", \$1}") --init --interactive --net host --privileged --rm --tty="$([ -t 0 ] && echo "true" || echo "false")" --volume /etc/fonts:/etc/fonts:ro --volume /etc/group:/etc/group:ro --volume /etc/localtime:/etc/localtime:ro --volume /etc/passwd:/etc/passwd:ro --volume /etc/timezone:/etc/timezone:ro --volume /run:/run --volume /tmp:/tmp --volume /usr/share/fonts:/usr/share/fonts:ro --volume /usr/share/icons:/usr/share/icons:ro --volume /usr/share/themes:/usr/share/themes:ro --volume /var/lib/dbus:/var/lib/dbus:ro --volume "${HOME}":"${HOME}" --volume "${PWD}":"${PWD}" --workdir "${PWD}" "${IMAGE:-timonier/openoffice}":"${TAG:-latest}" "$(basename "$0")" "$@"
